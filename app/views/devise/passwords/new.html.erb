<div class='main'>
  <h2 class='heading'>Forgot your password?</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field-container">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'field'  %>
    </div>
  
    <div class="actions">
      <%= f.submit "Send me reset password instructions" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
