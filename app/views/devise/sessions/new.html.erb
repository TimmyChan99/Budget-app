<div class="main">
  <h2 class='heading'>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form'}) do |f| %>
      <div class="field-container">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'field' %>
      </div>
    
      <div class="field-container">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'field' %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field-container">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class='actions'>
        <%= f.submit "Log in" %>
      </div>
    <% end %>

  <div class="shared_links">
    <%= render "devise/shared/links" %>
  </div>
</div>
