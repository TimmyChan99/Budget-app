<div class='main'>
  <h2 class='heading'>Sign up</h2> 
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field-container">
      <%= f.text_field :name, autofocus: true, placeholder: 'Full Name', autocomplete: "name", class: 'field' %>
    </div>
  
    <div class="field-container">
      <%= f.email_field :email, autofocus: true, placeholder: 'Email', autocomplete: "email", class: 'field' %>
    </div>
  
    <div class="field-container">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, placeholder: 'Password', autocomplete: "new-password", class: 'field' %>
    </div>
  
    <div class="field-container">
      <%= f.password_field :password_confirmation, placeholder: 'Password Confirm', autocomplete: "new-password", class: 'field' %>
    </div>
  
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
